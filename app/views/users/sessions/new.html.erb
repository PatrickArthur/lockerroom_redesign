<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="form-body">
        <ul class="nav nav-tabs final-login">
          <li class="active"><a data-toggle="tab" href="#sectionA">Sign In</a></li>
          <li><a data-toggle="tab" href="#sectionB">Join us!</a></li>
        </ul>
        <div class="tab-content">
          <div id="sectionA" class="tab-pane fade in active">
            <div class="innter-form">
              <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "sa-innate-form"}) do |f| %>
                <%= f.label :email, 'Email Address' %>
                <%= f.text_field :email, autofocus: true %>
                <%= f.label :password, 'Password' %>
                <%= f.password_field :password, autocomplete: "off" %>
                <% if devise_mapping.rememberable? -%>
                  <div class="field">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                  </div>
                <% end -%>
                <%= f.submit "Sign In" %>
                <%= link_to "Forgot Password?", new_user_password_path %>
              <% end %>
            </div>
            <div class="social-login">
              <p>- - - - - - - - Sign In With - - - - - - - - </p>
              <ul>
                <li><%= link_to "Facebook", user_facebook_omniauth_authorize_path, class: "fa fa-facebook" %></li>
                <li><a href=""><i class="fa fa-google-plus"></i> Google+</a></li>
                <li><a href=""><i class="fa fa-twitter"></i> Twitter</a></li>
              </ul>
            </div>
            <div class="clearfix"></div>
          </div>
          <div id="sectionB" class="tab-pane fade">
            <div class="innter-form">
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "sa-innate-form"}) do |f| %>
                <%= f.label :name, 'Name' %>
                <%= f.text_field :name, autofocus: true %>
                <%= f.label :email, 'Email Address' %>
                <%= f.text_field :email, autofocus: true %>
                <%= f.label :password, 'Password' %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "off" %>
                <%= f.label :password_confirmation, "Password Confirmation" %><br />
                <%= f.password_field :password_confirmation, autocomplete: "off" %>
                <%= f.label :avatar, "Upload Avatar" %><br />
                <%= f.file_field :avatar %>
                <%= f.hidden_field :avatar_cache %>
                <%= f.submit "Join Now" %>
              <% end %>
                </br>
                <p>By clicking Join now, you agree to hifriends's User Agreement, Privacy Policy, and Cookie Policy.</p>
              </form>
            </div>
            <div class="social-login">
              <p>- - - - - - - - Register With - - - - - - - - </p>
              <ul>
                <li><%= link_to "Facebook", user_facebook_omniauth_authorize_path, class: "fa fa-facebook" %></li>
                <li><a href=""><i class="fa fa-google-plus"></i> Google+</a></li>
                <li><a href=""><i class="fa fa-twitter"></i> Twitter</a></li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
